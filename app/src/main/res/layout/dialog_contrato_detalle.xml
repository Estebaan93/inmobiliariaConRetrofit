<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

  <TextView
      android:id="@+id/tvTituloContrato"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Detalles del Contrato"
      android:textSize="20sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/labelIdContrato"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:text="ID Contrato:"
      android:textStyle="bold"
      android:textSize="14sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvTituloContrato" />

  <TextView
      android:id="@+id/tvIdContrato"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:textSize="14sp"
      app:layout_constraintBaseline_toBaselineOf="@+id/labelIdContrato"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/labelIdContrato" />

  <TextView
      android:id="@+id/labelFechaInicio"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:text="Fecha Inicio:"
      android:textStyle="bold"
      android:textSize="14sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/labelIdContrato" />

  <TextView
      android:id="@+id/tvFechaInicio"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:textSize="14sp"
      app:layout_constraintBaseline_toBaselineOf="@+id/labelFechaInicio"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/labelFechaInicio" />

  <TextView
      android:id="@+id/labelFechaFin"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:text="Fecha Fin:"
      android:textStyle="bold"
      android:textSize="14sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/labelFechaInicio" />

  <TextView
      android:id="@+id/tvFechaFin"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:textSize="14sp"
      app:layout_constraintBaseline_toBaselineOf="@+id/labelFechaFin"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/labelFechaFin" />

  <TextView
      android:id="@+id/labelMontoAlquiler"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:text="Monto:"
      android:textStyle="bold"
      android:textSize="14sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/labelFechaFin" />

  <TextView
      android:id="@+id/tvMontoAlquiler"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:textSize="14sp"
      app:layout_constraintBaseline_toBaselineOf="@+id/labelMontoAlquiler"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/labelMontoAlquiler" />

  <TextView
      android:id="@+id/labelEstadoContrato"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:text="Estado:"
      android:textStyle="bold"
      android:textSize="14sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/labelMontoAlquiler" />

  <TextView
      android:id="@+id/tvEstadoContrato"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:textSize="14sp"
      app:layout_constraintBaseline_toBaselineOf="@+id/labelEstadoContrato"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/labelEstadoContrato" />

  <Button
      android:id="@+id/btnVerPagos"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:text="Ver Pagos"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/labelEstadoContrato" />

  <Button
      android:id="@+id/btnCerrar"
      style="@style/Widget.MaterialComponents.Button.TextButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:text="Cerrar"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/btnVerPagos" />

</androidx.constraintlayout.widget.ConstraintLayout>